<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="300.0" prefWidth="400.0">
         <children>
            <ListView fx:id="patientListView" layoutX="200.0" prefHeight="300.0" prefWidth="205.0" />
            <Button fx:id="createB" layoutX="44.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleCreateAction" text="Create" />
            <Button fx:id="deleteB" layoutX="44.0" layoutY="125.0" mnemonicParsing="false" onAction="#handleDeleteAction" text="Delete" />
            <Button fx:id="loadB" layoutX="48.0" layoutY="86.0" mnemonicParsing="false" onAction="#handleLoadAction" text="Load" />
         </children>
      </Pane>
   </children>
</GridPane>
